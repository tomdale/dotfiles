typeset -U path

# Set XDG environment variables to standardize locations for user-specific data
export XDG_DATA_HOME="${XDG_DATA_HOME:-$HOME/.local/share}"
export XDG_STATE_HOME="${XDG_STATE_HOME:-/Users/tomdale/.local/state}"
export XDG_CONFIG_HOME="${XDG_CONFIG_HOME:-/Users/tomdale/.config}"
export XDG_CACHE_HOME="${XDG_CACHE_HOME:-/Users/tomdale/.cache}"
export PATH="/Users/tomdale/.local/bin:$PATH"

# On Apple Silicon (arm64), Homebrew installs to /opt/homebrew instead of /usr/local,
# so we need to ensure this directory is in the PATH for installed tools to be found.
[ "$(uname -m)" = "arm64" ] && export PATH="/opt/homebrew/bin:$PATH"

export VOLTA_HOME="$XDG_DATA_HOME/volta"
export PATH="$VOLTA_HOME/bin:$PATH"

export PYTHONPYCACHEPREFIX="${XDG_CACHE_HOME}/pycache"

. "$HOME/.cargo/env"

eval $(brew shellenv)
