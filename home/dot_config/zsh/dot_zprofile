# Set XDG environment variables to standardize locations for user-specific data
export XDG_DATA_HOME="${XDG_DATA_HOME:-$HOME/.local/share}"
export XDG_STATE_HOME="${XDG_STATE_HOME:-$HOME/.local/state}"
export XDG_CONFIG_HOME="${XDG_CONFIG_HOME:-$HOME/.config}"
export XDG_CACHE_HOME="${XDG_CACHE_HOME:-$HOME/.cache}"

export LANG="en_US.UTF-8"
export EDITOR="code"

export VOLTA_HOME="$XDG_DATA_HOME/volta"
export CARGO_HOME="$XDG_DATA_HOME/cargo"

typeset -U path

export PATH="$HOME/.local/bin:$PATH"
export PATH="$VOLTA_HOME/bin:$PATH"
export PATH="$CARGO_HOME/bin:$PATH"

# Configure Homebrew environment (Apple Silicon: /opt/homebrew, Intel: /usr/local)
if command -v /opt/homebrew/bin/brew; then
    eval "$(/opt/homebrew/bin/brew shellenv)"
elif command -v /usr/local/bin/brew; then
    eval "$(/usr/local/bin/brew shellenv)"
fi

export PYTHONPYCACHEPREFIX="${XDG_CACHE_HOME}/pycache"